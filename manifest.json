{
  "name": "Lingr to GitHub Issue",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Replace hash-tag-attached numbers like '#210' with a link to the GitHub Issue of a given GitHub repository.",
  "icons": {
  	   "16": "icon16.png",
           "48": "icon48.png",
	   "128": "icon128.png"
	   },
  "content_scripts": [
    {
      "matches": [
      	"http://lingr.com/*"
      ],
      "js": [
        "jquery-1.6.3.min.js",
        "main.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"] 
  },
  "options_page": "options.html",
  "permissions": [
  ]
}
